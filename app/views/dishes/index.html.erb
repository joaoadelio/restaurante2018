<p id="notice"><%= notice %></p>
<div class="row" style="padding-top: 15px;">

<div class="col">
<h1 style="font-size: 50px;">Pratos</h1>
</div>
<div class="col">
  <span style="padding-left: 400px; ">
<%= link_to 'Novo Prato', new_dish_path, :class=> "btn btn-outline-success btn-lg" %>
  </span>
</div>
</div>
<div class="row">
<table class="table table-dark">
  <thead>
    <tr>
      <th style="font-size: 30px">Valor</th>
      <th style="font-size: 30px">Descrição</th>
      <th style="font-size: 25px">Tempo de Preparação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td style="font-size: 20px">R<%= number_to_currency(dish.price) %></td>
        <td style="font-size: 20px"><%= dish.description %></td>
        <td style="text-align: center; font-size: 20px"><%= formatar_hora dish.preparationtime %></td>
        <td><%= link_to 'Visualizar', dish, :class=> "btn btn-warning" %></td>
        <td><%= link_to 'Editar', edit_dish_path(dish), :class=> "btn btn-info"%></td>
        <td><%= link_to 'Excluir', dish, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>


